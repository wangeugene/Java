{
  "manifest_version": 3,
  "name": "Surge Rule Updater",
  "version": "1.0.0",
  "description": "Quickly add or remove the current domain from the Surge rule file.",
  "permissions": ["tabs", "activeTab"],
  "host_permissions": ["https://wangeugene.cc/*"],
  "action": {
    "default_title": "Surge Rule Updater",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
