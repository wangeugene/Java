{
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es6",
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
